<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.romanusynin.mobreg.mobreg">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.telephony.gsm"/>

    <application android:allowBackup="true"
                 android:name=".MobRegApplication"
                 android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher_48dp"
                 android:theme="@style/AppTheme">

                <activity android:name=".activities.SelectRegionActivity"
                          android:label="@string/app_name"
                          android:launchMode="singleTop">
                    <!--<intent-filter>-->
                        <!--<action android:name="android.intent.action.MAIN" />-->
                        <!--<category android:name="android.intent.category.LAUNCHER" />-->
                    <!--</intent-filter>-->
                </activity>

                <activity android:name=".activities.RegionsActivity"
                          android:label="@string/title_regions_activity"
                          android:launchMode="singleTop"  >
                </activity>

                <activity android:name=".activities.HospitalsActivity"
                          android:label="@string/title_hospitals_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.DepartmentsActivity"
                          android:label="@string/title_departments_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.DoctorsActivity"
                          android:label="@string/title_doctors_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.WorkDaysActivity"
                          android:label="@string/title_work_days_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.WorkTimesActivity"
                          android:label="@string/title_tickets_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.AuthActivity"
                          android:label="@string/title_take_ticket_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.SuccessActivity"
                          android:label="@string/title_success_activity"
                          android:launchMode="singleTop">
                </activity>

                <activity android:name=".activities.AccountListActivity"
                          android:launchMode="singleTop"
                          android:label="@string/accounts_title">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />
                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
                </activity>

                <activity android:name=".activities.AccountActivity"
                          android:label="@string/accounts_title"
                          android:launchMode="singleTop">
                    <meta-data android:name="android.support.PARENT_ACTIVITY"
                               android:value=".activities.AccountListActivity"/>
                </activity>

    </application>

</manifest>
